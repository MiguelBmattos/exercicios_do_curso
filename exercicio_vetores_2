import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		int[] vet = new int[n];
		int qnt = 0;
		
		for(int i=0; i<n; i++) {
			vet[i] = sc.nextInt();
			if(vet[i]%2==0) {
				qnt += 1;
				System.out.printf("%d ",vet[i]);
			}
		}
		
		System.out.printf("\n%d",qnt);
		
		sc.close();
	}

}
